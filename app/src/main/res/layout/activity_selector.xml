<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ffc7f1f1"
    tools:context=".SelectorActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical|center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="My Nanodegree Apps!"
            android:id="@+id/title_textview"
            android:gravity="center_vertical" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="Spotify Streamer"
            android:id="@+id/button_streamer"
            android:background="#fffa9729" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="SCORES APP"
            android:id="@+id/button_scores"
            android:background="#fffa9729"
            android:layout_marginTop="10dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="LIBRARY APP"
            android:id="@+id/button_library"
            android:background="#fffa9729"
            android:layout_marginTop="10dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="BUILD IT BIGGER"
            android:id="@+id/button_build_bigger"
            android:background="#fffa9729"
            android:layout_marginTop="10dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="XYZ READER"
            android:id="@+id/button_xyz_reader"
            android:background="#fffa9729"
            android:layout_marginTop="10dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="CAPSTONE: MY OWN APP"
            android:id="@+id/button_capstone"
            android:background="#f3f40807"
            android:layout_marginTop="10dp" />




    </LinearLayout>
</RelativeLayout>
